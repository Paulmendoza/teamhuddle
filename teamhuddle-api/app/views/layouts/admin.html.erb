</head>
<body>
<div class="container">
  <div id="wrapper" class="panel panel-default">
    <ul class="nav nav-pills">
      <% if admin_signed_in? %>
          <li><a href="/admin">Home</a></li>
          <li><%= link_to 'Organizations', organizations_path %></li>
          <li><%= link_to 'Locations', locations_path %></li>
          <li><%= link_to 'Dropins', dropins_path %></li>
          <li><%= link_to 'Contact Us', '/admin/contact_us' %></li>
          <li><%= link_to "Sign out", destroy_admin_session_path, :method => :delete %></li>
          <li><%= link_to "Change your password", edit_admin_registration_path %></li>
      <% end %>
      <li><%= link_to 'Client', root_path %></li>
    </ul>

    <%= yield %>
  </div>
</div>
