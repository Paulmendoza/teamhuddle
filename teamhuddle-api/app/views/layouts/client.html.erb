<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>teamhuddle</title>
    
    <%= stylesheet_link_tag  'application', 
                             'http://fonts.googleapis.com/css?family=Jura:400,600',
                             'http://fonts.googleapis.com/css?family=Raleway:400,300',
                             'animate',
                             'typography',
                             media: 'all',
                             'data-turbolinks-track' => true%>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <a class="navbar-brand logotext" href="#"><%= image_tag 'logo.png', class: "logonav center-block", alt: 'teamhuddle_logo'%></a>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="collapse navbar-collapse">

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown navlinks">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">sports <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">volleyball</a></li>
            <li><a href="#">hockey</a></li>
            <li><a href="#">basketball</a></li>
            <li><a href="#">soccer</a></li>
            <li><a href="#">dragonboating</a></li>
          </ul>
        </li>

          <li class="navlinks"><%= link_to "about" %></li>        
          <li class="navlinks"><%= link_to "contact" %></li>        
          <li class="navlinks"><%= link_to "team" %></li>
          <li class="navlinks"></li>
        </ul>
      </div>

    </nav>

    <div class="container-fluid">
        <%= yield %>
    </div>

    <div class="footer">wejrwlkrlewkrjekwlrklewrjlwrjlwerjlewj</footer>
    
      
    <%= javascript_include_tag 'application' %>  
    <%= javascript_include_tag '//maps.googleapis.com/maps/api/js?key=AIzaSyDwIy4KU0bhEV5R3yV5hAqAcL_TIjlrY0o' %>
  <script>
    var navHeight = $('.navbar-collapse').height();

    $('.navbar-collapse').on('show.bs.collapse', function(){
      if($(this).height() != 0){
         navHeight = $(this).height();
      }
      $('body').animate({
        'padding-top': parseInt($("body").css("padding-top")) + navHeight
       }, 100);
    });

    $('.navbar-collapse').on('hide.bs.collapse', function(){
      navHeight = $(this).height();
      $('body').animate({
        'padding-top': parseInt($("body").css("padding-top")) - navHeight
       }, 100);
    });

  </script>

  </body>
</html>
