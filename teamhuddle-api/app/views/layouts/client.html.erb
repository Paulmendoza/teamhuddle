<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>teamhuddle</title>
    
    <%= stylesheet_link_tag  'application', 
                             'http://fonts.googleapis.com/css?family=Jura:400,600',
                             'http://fonts.googleapis.com/css?family=Raleway:400,300',
                             'typography',
                             media: 'all',
                             'data-turbolinks-track' => true%>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53af382b4ee31991" async="async"></script>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <a class="navbar-brand logotext" href="/#/"><%= image_tag 'logo.png', class: "logonav center-block", alt: 'teamhuddle_logo'%></a>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="collapse navbar-collapse">

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown navlinks">
          <a href="/#/" class="dropdown-toggle" data-toggle="dropdown">sports <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "volleyball", "/#/volleyball" %></li>
            <li><%= link_to "hockey", "/#/hockey" %></li>
            <li><%= link_to "basketball", "/#/basketball" %></li>
            <li><%= link_to "soccer", "/#/soccer" %></li>
            <li><%= link_to "dragonboat", "/#/dragonboat" %></li>

          </ul>
        </li>

          <li class="navlinks"><%= link_to "about", controller: :index, action: :about %></li>        
          <li class="navlinks"><%= link_to "contact", controller: :index, action: :contact %></li>
          <li class="navlinks"></li>
        </ul>
      </div>

    </nav>

    <div class="container-fluid">
        <%= yield %>
    </div>

    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <div class="footer">
      <div class="addthis_horizontal_follow_toolbox pull-right addthis"></div>
    </div>
    
    
    <!-- Go to www.addthis.com/dashboard to customize your tools -->

  <script>
    var navHeight = $('.navbar-collapse').height();

    $('.navbar-collapse').on('show.bs.collapse', function(){
      if($(this).height() != 0){
         navHeight = $(this).height();
      }
      $('body').animate({
        'padding-top': parseInt($("body").css("padding-top")) + navHeight
       }, 100);
    });

    $('.navbar-collapse').on('hide.bs.collapse', function(){
      navHeight = $(this).height();
      $('body').animate({
        'padding-top': parseInt($("body").css("padding-top")) - navHeight
       }, 100);
    });

    // Fix mobile floating toolbar when input is focused
    if(/iPhone|iPod|Android|iPad/.test(window.navigator.platform)){

    $(document)
      .on('focus', 'textarea,input,select', function(e) {
        $('.footer').css('position', 'absolute');
      })
      .on('blur', 'textarea,input,select', function(e) {
        $('.footer').css('position', '');
      });
  } 

  </script>

  </body>
</html>
